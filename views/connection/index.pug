doctype html
html
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title EasyUML|Login
        link(href="/assets/css/login.css" rel="stylesheet")
        link(href="/assets/css/bootstrap/bootstrap.min.css" rel="stylesheet")
    body.container-fluid(style="overflow-x: hidden;")
        header(class="row" id="header")
            div.row
                div.col-md-8
                    div(style='color:#61dafb; padding-left:10%; padding-top:1%;')
                        h1(style='display:inline;') EasyUML
        div(class="content row")
            div(class="col-md-6" style="text-align:center;")
                h1(style='display:inline;') EasyUML
            div(class="form-container col-md-6")
                form(id="login-form" class="form-horizontal" action="/login" enctype="multipart/form-data" method="post")
                    div(class="form-group field-loginform-login required")
                        div(class='form-group row' style='text-align:center;')
                            div(class='col-sm-3')
                                label(class="control-label" style="margin:auto;" for="login") Nom d'utilisateur
                            div(class="col-sm-9")
                                input(type="text" id="login" class="form-control" required name="login" autofocus style="margin:auto;" aria-required="true")
                            div(class="col-sm-9" style='text-align: center;')
                                div(class="help-block")
                    div(class="form-group field-loginform-password required")
                        div(class='form-group row' style='text-align:center;')
                            div(class='col-sm-3')
                                label(class="control-label" style="margin:auto;" for="password") Mot de Passe
                            div(class="col-sm-9")
                                input(type="password" id="password" required class="pwd form-control" name="password" style="margin:auto;" aria-required="true")
                            div(class="col-sm-9" style='text-align: center;')
                                div(class="help-block")
                    span(class="center-block" style="text-align: center;")
                        input(type='checkbox' class = "revealpwd") 
                        span  Afficher le mot de passe
                    br
                    div(class="button-container row")
                        button(type="submit" class="btn btn-primary" name="login-button") Connexion
                div.row(style="text-align:center; padding-top:30px; margin-bottom:20px;")
                    span Nouveau ? 
                    a(href="/signup") Inscrivez-vous ici