        script(type="text/javascript").
            angular.module('paperwork',[]).controller('paperworkController',function($scope,$http){
                
                var startlink = "no";
                var endlink = "no";
                var linkflag = false;
                var activecolor = "color:red;";
                var passivecolor = "color:#97a0b3;"

                var graph = new joint.dia.Graph;
                var paper = new joint.dia.Paper({
                    el: document.getElementById('holder'),
                    model: graph,
                    width: document.getElementById('holder').width,
                    height: 600,
                    gridSize: 1,
                    clickThreshold: 1 
                });

                paper.on('cell:pointerdown',function(cellView){
                    if(linkflag){
                        if(startlink == "no"){
                            startlink = cellView.model;
                        }
                        else{
                            endlink = cellView.model;
                            var link = new joint.shapes.custom.links.Normal();
                            link.source(startlink);
                            link.target(endlink);
                            link.appendLabel({
                                attrs:{
                                    label:{
                                        text:'TEEEEEXT'
                                    }
                                }
                            });
                            console.log(link);
                            link.addTo(graph);
                            linkflag = false;
                            document.getElementById("newlink").style=passivecolor;
                            startlink = "no";
                            endlink = "no";

                        }

                    }

                });

                paper.on('link:pointerdblclick',function(cellView){
                    var label = prompt("Entrez le nom de la relation");
                    cellView.model.label(0,{ attrs: { label: { text: label } } });
                })
                    
                paper.on('cell:pointerdblclick', function(cellView) {
                    if(cellView.model.isElement()){
                        var obj = cellView.$box;
                        obj.find(".class-name input").focus();
                    }
                });

                paper.on('blank:pointerclick', function() {
                        $("input").blur();
                });




                joint.shapes.class = {};
                joint.shapes.class.Element = joint.shapes.basic.Rect.extend({
                    defaults: joint.util.deepSupplement({
                        type: 'class.Element',
                        attrs: {
                            rect: { stroke: 'none', 'fill-opacity': 0 }
                        }
                    }, joint.shapes.basic.Rect.prototype.defaults)
                });

                joint.shapes.class.ElementView = joint.dia.ElementView.extend({
                    template:[
                        '<div class="class-box container">',
                            '<div class="row class-name"><input style="margin:auto;"" class="name" type="text" value="classname" /></div>',
                            '<div class="row class-item"><input class="item" data-key="0"  type="text"/></div>',
                            '<div class="row class-item"><input class="item" data-key="1"  type="text"/></div>',
                        '</div>'
                    ].join(''),

                    initialize: function(){
                        _.bindAll(this, 'updateBox');
                        items=[];
                        joint.dia.ElementView.prototype.initialize.apply(this, arguments);
                        this.$box = $(_.template(this.template)());

                        this.$box.find('.item').on('change', _.bind(function(evt) {
                            key = evt.currentTarget.dataset.key;
                            items[key]=$(evt.target).val();
                            this.model.set('items',items);
                        }, this));

                        this.$box.find('.name').on('change',_.bind(function(evt){
                            this.model.set('name',$(evt.target).val());
                        },this));

                        this.$box.find('.class-name').on('dblclick',function(evt){
                            $(this).find('input').focus();
                        });

                        this.model.on('change', this.updateBox, this);
                        this.updateBox();
                        this.model.on('remove', this.removeBox, this);
                    },

                     removeBox: function(evt) {
                        this.$box.remove();
                    },

                    render:function(){
                        joint.dia.ElementView.prototype.render.apply(this, arguments);
                        this.paper.$el.prepend(this.$box);
                        this.updateBox();
                        return this;
                    },

                    updateBox: function() {
                        var bbox = this.model.getBBox();
                        var self = this;
                        this.$box.find('.name').val(this.model.get('name'));
                        this.$box.find('.item').each(function(index){
                            $(this).val(self.model.get('items')[index]);
                        });
                        this.$box.css({
                            width: bbox.width,
                            height: bbox.height,
                            left: bbox.x,
                            top: bbox.y,
                            transform: 'rotate(' + (this.model.get('angle') || 0) + 'deg)'
                        });
                    },
                });

                joint.shapes.standard.Link.define('custom.links.Normal', {
                    attrs: {
                        line: {
                            stroke: 'black',
                            strokeWidth: 2,
                            targetMarker: {
                                'type': 'path',
                                'width': 10,
                                'height': 20,
                                'y': -10,
                            }
                        }
                    },
                    defaultLabel: {
                        markup: [
                            {
                                tagName: 'rect',
                                selector: 'body'
                            }, {
                                tagName: 'text',
                                selector: 'label'
                            }
                        ],
                        attrs: {
                            label: {
                                fill: 'black', // default text color
                                fontSize: 12,
                                textAnchor: 'middle',
                                yAlignment: 'middle',
                                pointerEvents: 'auto'
                            },
                            body: {
                                ref: 'label',
                                fill: 'white',
                                stroke: 'white',
                                strokeWidth: 2,
                                refWidth: '120%',
                                refHeight: '120%',
                                refX: '-10%',
                                refY: '-10%'
                            }
                        }
                    }
                }, {
                    // inherit joint.shapes.standard.Link.markup
                });

                var paperwork = this;
                paperwork.save=function($event){
                    newdia = $event.target.lastChild.value;
                    var name="";
                    if(newdia == -1){
                        name = prompt("Entrez le nom de votre de diagramme");
                        $event.target.lastChild.value = 0;
                    }
                    var jsonobject = graph.toJSON();
                    var jsonstring = JSON.stringify(jsonobject);
                    $http({
                        method:"POST",
                        data:{"data":jsonstring,"newdia":newdia,"name":name},
                        url:"/save"
                    }).then(function mySuccess(response){
                            console.log(response);
                            alert("Sauvegarde réussie");
                            newdia=0;
                        }, function myError(response) {
                            console.log(response);
                    });
                };

                paperwork.delete=function($event){
                    document.getElementById("delete").style=activecolor;
                }

                paperwork.addclass=function($event){
                    $event.preventDefault();
                    var el1 = new joint.shapes.class.Element({
                        position: { x: 80, y: 80 },
                        size: { width: 170, height: 100 },
                        name:"classname",
                        items:[]
                    });

                    graph.addCells([el1]);

                };

                paperwork.addlink=function($event){
                    if(linkflag){
                        linkflag != linkflag;
                        document.getElementById("newlink").style=passivecolor;
                    }
                    else{
                        document.getElementById("newlink").style = activecolor;
                        linkflag = true;
                    }

                };


                var data =!{data};
                if(data != -1){
                    data = JSON.parse(data);
                    done = [];
                    for(var j = 0; j!=data.cells.length; j++){
                        cell = data.cells[j];
                        if(cell.type == "standard.Link"){
                            var link = new joint.shapes.standard.Link();
                            var source = cell.source.id;
                            var target = cell.target.id;
                            var sourceflag = false;
                            var targetflag = false;
                            for(i=0;i!=done.length;i++){
                                if(done[i].id == source){
                                    sourceflag = true;
                                    source = done[i];
                                }
                                if(done[i].id == target){
                                    targetflag = true;
                                    target = done[i];
                                }
                            }
                            if(sourceflag){
                                link.source(source);
                            }else{
                                var el1 = new joint.shapes.html.Element({
                                    id: source,
                                    position: data.cells.find(function(element){
                                        if(element.id == source)
                                        return element;
                                    }).position,

                                    size: data.cells.find(function(element){
                                        if(element.id == source)
                                        return element;
                                    }).size,

                                    name:data.cells.find(function(element){
                                        if(element.id == source)
                                        return element;
                                    }).name,
                                });
                                graph.addCells([el1]);
                                link.source(el1);
                                done.push(el1);
                            }

                            if(targetflag){
                                link.target(target);
                            }else{
                                var el2 = new joint.shapes.html.Element({
                                    id:target,
                                    position: data.cells.find(function(element){
                                        if(element.id == target)
                                        return element;
                                    }).position,

                                    size: data.cells.find(function(element){
                                        if(element.id == target)
                                        return element;
                                    }).size,

                                    name:data.cells.find(function(element){
                                        if(element.id == target)
                                        return element;
                                    }).name,
                                });
                                graph.addCells([el2]);
                                link.target(el2);
                                done.push(el2);
                            }
                            link.addTo(graph);
                        }
                        
                    }

                }
            });


